 

<form action="/login" method="post" class=" mx-auto mt-3 w-50 p-3 border border-dark-subtle rounded-3">

   <div class="d-flex align-items-center ">

    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
    {{#if loginError}}
    
    <div class="ps-3 alert alert-danger alert-dismissible fade show" role="alert">
{{loginError}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
    {{/if}}
   </div>

    <div class="form-floating mt-3">
      <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating mt-3">
      <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
      <label for="floatingPassword">Password</label>
    </div>

    

    <button class="btn btn-lg btn-primary mt-3" type="submit">Sign in</button>



  </form>